!!! 5
%html
  %head
    %title= yield(:title).empty? ? "TweetGab" : yield(:title)
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/tweetgab.css', :media => 'all'
    = csrf_meta_tag
    %script{:type => 'text/javascript', :src => 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js'}
    %script{:type => 'text/javascript', :src => 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.js'}
    = javascript_include_tag :tweetgab
    =yield(:head)
  %body
    =content_for?(:content) ? yield(:content) : yield